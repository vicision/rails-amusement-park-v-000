<h1>Listing attractions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <strong>Picture</strong>
      </td>
      <td>
        <strong>Name</strong>
      </td>
      <td>
        <strong>Tickets</strong>
      </td>
      <td>
        <strong>Details</strong>
      </td>
    </tr>
    <% @attractions.each do |attraction| %>
      <tr>
        <td><img src="src="http://www.allthingsclipart.com/05/amusement.park.05.jpg"" width="100"></td>
        <td><%= attraction.name %></td>
        <td><%= attraction.tickets %></td>
        <td><%= link_to "Show #{attraction.name}", attraction_path(attraction) %></td>
      </tr>
      <% end %>
  </tbody>
</table>
<br>
<p>
  <%= link_to  "New Attraction", "/attractions/new" %>
</p>